---
import Layout from '../layouts/Layout.astro';
import Prose from '../components/Prose.astro';
import { getEntry, render } from 'astro:content';

// Get the MDX entry
const entry = await getEntry('posts', 'sample-article');
const { Content } = await render(entry);
---

<Layout title={entry.data.title} description={entry.data.description}>
  <article class="max-w-4xl mx-auto">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{entry.data.title}</h1>
      <div class="text-gray-600 space-y-2">
        <p class="text-lg">{entry.data.description}</p>
        <div class="flex items-center space-x-4 text-sm">
          <span>By {entry.data.author}</span>
          <span>â€¢</span>
          <time datetime={entry.data.pubDate}>
            {new Date(entry.data.pubDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
      </div>
    </header>
    
    <Prose>
      <Content />
    </Prose>
  </article>
</Layout>
